<ul class="navbar-nav">
  <%= render_nav_actions do |config, action|%>
    <li class="nav-item"><%= action %></li>
  <% end %>

  <% if has_user_authentication_provider? %>
    <% if current_user %>
    <li class="nav-item">
      <%= link_to t('blacklight.header_links.logout'), destroy_user_session_path, class: 'nav-link' %>
    </li>
    <% unless current_user.to_s.blank? -%>
    <li class="nav-item">
      <%= link_to current_user.to_s, 'https://user.kb.dk/user/edit', class: 'nav-link' %>
    </li>
    <% end %>
    <% else %>
    <li class="nav-item">
      <%-# link_to t('blacklight.header_links.login'), new_user_session_path, class: 'nav-link' -%>
      <a class="nav-link" href="<%= new_user_session_path %>">
        <%= t('blacklight.header_links.login') %>
        <%= render :partial =>'shared/components/atoms/icon/index', locals: {icon_type: 'account_circle', icon_size: 'icon-xsmall'}%>
      </a>
    </li>
    <%= render :partial => 'catalog/tooltips', locals: {document: 'login', header: false} %>
<% end %>
  <% end %>
</ul>
