      <i class="fa fa-lg fa-download" aria-hidden="true"></i> <span class="d-none d-lg-inline"><%= t('general.text_toolbar.text') %></span>
  <% end %>
  <% if query.present? %>
  <a href="javascript:toggleHighlight()">
    <i class="fa fa-paint-brush"></i><span class="d-none d-lg-inline"><%= t('general.text_toolbar.highlight') %></span>
  </a>
  <% end %>
  <%= render :partial => 'show_tools_work' %>
  <% if has_facs %>
      <a id="hide_facsimile" class="hidden"><i class="fa fa-chevron-right fa-large" title="<%= t('general.text_toolbar.hide_facsimile') %>"></i><span class="d-none d-xl-inline"><%= t('general.text_toolbar.hide_facsimile') %></span></a>
      <a id="show_facsimile"><i class="fa fa-chevron-left fa-large" title="<%= t('general.text_toolbar.show_facsimile') %>"></i><span><%= t('general.text_toolbar.show_facsimile') %></span></a>
  <% end %>

  <i id="ocrFullscreenButton" class="fa fa-expand fa-lg" title="<%= t('general.text_toolbar.fullscreen') %>"></i>


  <% if @document['cat_ssi'] == 'author' %>

      <a class="icon-list" href="<%= "/?utf8=âœ“&search_field=author&q=#{@document['work_title_tesim'].try(:join)}" %>">
        <i class="fa fa-list" aria-hidden="true"></i> <%= t('view-specific.work_list') %>
      </a>
  <% end %>
  <a id="exposeLinkThing" href="javascript:toggleExposable()">Vis tekstmuligheder</a>
  <!-- <%= @document[:id] %> -->
  <% if @document[:capabilities_ssi] %>
  <% if @document[:capabilities_ssi].match(/^.+$/) %>
  <%= @document[:capabilities_ssi].html_safe %>
  <% end %>
  <% end %>
  <% if @document[:id].match(/sks-/) %>
      <%
        txt_id = @document['id'].gsub(/(txt)|(txr)|(kom)/, 'txt-root').gsub(/-root.*$/, '-root')
        txr_id = @document['id'].gsub(/(txt)|(txr)|(kom)/, 'txr-root').gsub(/-root.*$/, '-root')
        kom_id = @document['id'].gsub(/(txt)|(txr)|(kom)/, 'kom-root').gsub(/-root.*$/, '-root')
      %>

      <%= link_to("/text/" + txt_id) do %>
          <i class="fa fa-file-text" aria-hidden="true"></i>
          <%= t('general.landing_page.text')%>
      <% end %>
      <%= link_to ("/text/" + kom_id) do %>
          <i class="fa fa-comment" aria-hidden="true"></i>
          <%= t('general.landing_page.Comments')%>
      <% end %>
      <%= link_to ("/text/" + txr_id) do %>
          <i class="fa fa-file-text-o" aria-hidden="true"></i>
          <%= t('general.landing_page.text_statements')%>
      <% end %>

  <% end %>

</div>
<article class="ocr">
  <%= render partial: 'fullscreen_buttons' %>

  <% if @document['cat_ssi'] == 'author' %>
      <% unless doc_presenter.field_value("author_name_tesim").empty? %>
          <div class="dl-horizontal  dl-invert pull-left">
            <strong><span class="blacklight-author_name_tesim text-left-important"><%= t('general.author.author_potrait_written_by') %> </span></strong>
            <span class="blacklight-author_name_tesim">&nbsp;<%= doc_presenter.field_value "author_name_tesim" %></span>
          </div>
      <% end %>
      <div class="pull-right thumbnail">
        <%= image_tag get_author_image(@document.id) %>
      </div>
      <div><br/><br/><br/></div>
  <% end %>

  <%= FileServer.render_snippet(@document['id'],
                                {q: query, op: "render"}) %>

  <script>
    var elems  = document.getElementsByClassName("exposableDocumentFunctions");
    var anchor = document.getElementById("exposeLinkThing");
    var status = 'hidden';

    function toggleExposable() {
      if(status == 'hidden') {
        showExposableFunctions();
      } else {
        hideExposableFunctions();
      }
    }

    function showExposableFunctions() {
      var i;
      for (i = 0; i < elems.length; i++) {
          elems[i].style.visibility='visible';
      }  
      status = 'visible';
      anchor.style.color='white';
      anchor.style.backgroundColor='black';
    } 

    function hideExposableFunctions() {
      var i;
      for (i = 0; i < elems.length; i++) {
          elems[i].style.visibility='hidden';
      }  
      status = 'hidden';
      anchor.style.color='black';
      anchor.style.backgroundColor='white';
    } 

  </script>
</article>


