<div class="search-not-main box-gradient-blue fixed-top-second">
  <div class="container search-bg">
    <%= form_tag search_action_url, :method => :get, :class => 'search ' do %>
        <div class="input-group input-group-lg search-form-with-tooltips">
          <% unless search_fields.empty? %>
              <label for="search_field" class="sr-only">
                <%= t('blacklight.search.form.search_field.label') %>
              </label>
              <span class="sr-only">
                       <%= t('blacklight.search.form.search_field.post_label') %>
                </span>
          <% end %>
          <span class="input-group-btn hidden-xs">
              <%= select_tag(:search_field, options_for_select(search_fields, h(params[:search_field])), :title => t('blacklight.search.form.search_field.title'), :class => "input-lg") %>
            </span>
          <label for="q" class="sr-only"><%= t('blacklight.search.form.search.label') %></label>
          <%= text_field_tag :q, params[:q], :placeholder => t('blacklight.search.form.search.placeholder'), :class => "search_q q form-control", :id => "q", :autofocus => should_autofocus_on_search_box? %>
          <span class="input-group-btn ">
                <button type="submit" class="btn btn-primary btn-lg" id="search">
                  <span class="submit-search-text"><%= t('blacklight.search.form.submit') %></span>
                  <span class="glyphicon glyphicon-search"></span>
                </button>
            </span>
          <%= render 'tooltips' %>
          </span>
        </div>
    <% end %>
  </div>
</div>

