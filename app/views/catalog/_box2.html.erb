    url = "/text?f[subcollection_ssi][]="+ type + "&match=one&search_field=Alt"
%>
<div class="col-md-3">
  <a href="<%= url %>">
    <div class="box-shadow">
      <div class="image-box2 <%= type %> img-thumbnail">
      </div>
      <div class="text">
        <h3 class="btn btn-link btn-lg">
	  <%= get_collection_name(type) %>
        </h3>
      </div>
    </div>
  </a>

  <a href="/pages/about-<%= type %>">Om samlingen</a>

</div>
