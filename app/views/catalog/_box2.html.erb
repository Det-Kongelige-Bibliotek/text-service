<%
  # titles is a link to search for all titles
  # otherwise get the path to the special author/periods searches
  if (type == 'title')
    url = "/?utf8=✓&search_field=Alt&q=grundtvig"
  elsif (type == 'priod')
    url = "/?utf8=✓&search_field=author&q=søren+kirkegaard"
  else
    url = "/?utf8=✓&search_field=Alt&q="+t("view-specific.home.boxes.#{type}.title")
  end
%>
<div class="col-md-3">
  <a href="<%= url %>">
    <div class="box-shadow">
      <div class="image-box2 <%= type %> img-thumbnail">
      </div>
      <div class="text">
        <h3 class="btn btn-link btn-lg">
          <%= t("view-specific.home.boxes.#{type}.title") %>
        </h3>
      </div>
    </div>
  </a>
</div>
