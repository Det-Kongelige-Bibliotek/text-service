<%= form_tag search_action_url, :method => :get, :class => '' do %>
    <%= render_hash_as_hidden_fields(search_state.params_for_search.except(:q, :search_field, :qt, :page, :utf8)) %>
    <%= hidden_field_tag :search_field, "Alt" %>

    <div id="home-search" class="input-group input-group-lg search-form-with-tooltips">
      <label for="q" class="sr-only"><%= t('blacklight.search.form.search.label') %></label>
      <%= text_field_tag :q, params[:q], :placeholder => t('blacklight.search.form.search.placeholder'), :class => "search_q q form-control", :id => "q", :autofocus => should_autofocus_on_search_box? %>

      <span class="input-group-btn ">
                <button type="submit" class="btn btn-primary btn-lg" id="search">
                  <span class="submit-search-text"><%= t('blacklight.search.form.submit') %></span>
                  <i class="fa fa-search" aria-hidden="true"></i>
                  <span class="glyphicon glyphicon-search"></span>
                </button>
      </span>
      <%= render 'tooltips' %>

    </div>

<% end %>
